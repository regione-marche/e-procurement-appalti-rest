<?xml version="1.0" encoding="UTF-8"?>
<configuration>
	<springProperty scope="context" name="localName" source="catalina.base" defaultValue="/opt/api-appalti"/>
	<property name="LOG_NAME" value="ws-appalti-ms" />
	<appender name="STDOUT"	class="ch.qos.logback.core.ConsoleAppender">
		<encoder>
			<pattern>
				%d{dd-MM-yyyy HH:mm:ss.SSS} [%thread] %-5level %logger{36}.%M - %msg%n
			</pattern>
		</encoder>
	</appender>
	
	<appender name="SAVE-TO-FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
		<file>${localName:-/opt/api-appalti}/logs/${LOG_NAME}.log</file>
		<encoder
			class="ch.qos.logback.classic.encoder.PatternLayoutEncoder">
			<pattern>
				%d{dd-MM-yyyy HH:mm:ss.SSS} [%thread] %-5level %logger{36}.%M - %msg%n
			</pattern>
		</encoder>
		<rollingPolicy
			class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
			<fileNamePattern>${localName:-/opt/api-appalti}/logs/${LOG_NAME}_%d{yyyy-MM-dd}.gz</fileNamePattern>
			
		</rollingPolicy>
	</appender>

	<root level="info">
		<appender-ref ref="STDOUT" />
		<appender-ref ref="SAVE-TO-FILE" />
	</root>
	
	<logger name="it.maggioli" additivity="false" level="debug">
		<appender-ref ref="STDOUT" />
		<appender-ref ref="SAVE-TO-FILE" />
	</logger>

</configuration>